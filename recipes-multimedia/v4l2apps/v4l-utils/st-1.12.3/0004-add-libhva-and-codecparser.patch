+  pic_param->CurrPic.TopFieldOrderCnt = picture->poc;
+  i = 0;
+  if (picture->type != GST_VAAPI_PICTURE_TYPE_I) {
+    for (reflist = g_queue_peek_head_link (&ref_pool->ref_list);
+        reflist; reflist = g_list_next (reflist)) {
