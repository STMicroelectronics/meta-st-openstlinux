+      &encoder->ref_pools[encoder->view_idx];
+  GstVaapiEncoderH264Ref *ref_pic;
+  GList *reflist;
+  guint i;
+
+  memset (pic_param, 0, sizeof (VAEncPictureParameterBufferH264));
