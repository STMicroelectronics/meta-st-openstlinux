+     *  Range: 0 to 31, inclusive.
+     */
+    unsigned char   num_ref_idx_l0_active_minus1;
+    /** \brief Maximum reference index for reference picture list 1.
+     *  Range: 0 to 31, inclusive.
+     */
+    unsigned char   num_ref_idx_l1_active_minus1;
