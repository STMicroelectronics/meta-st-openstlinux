+          g_queue_pop_head (&reorder_pool->reorder_frame_list);
+      gst_vaapi_enc_picture_unref (pic);
+    }
+    g_queue_clear (&reorder_pool->reorder_frame_list);
+  }
+
+  return GST_VAAPI_ENCODER_STATUS_SUCCESS;
+}
